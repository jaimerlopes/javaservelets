<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>rato</servlet-name>
        <servlet-class>model.rato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistarRatoController</servlet-name>
        <servlet-class>controller.RegistarRatoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultarRatoController</servlet-name>
        <servlet-class>controller.consultarRatoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarALLRatos</servlet-name>
        <servlet-class>controller.ConsultarALLRatos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>AuthenticationFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rato</servlet-name>
        <url-pattern>/rato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistarRatoController</servlet-name>
        <url-pattern>/RegistarRatoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultarRatoController</servlet-name>
        <url-pattern>/consultarRatoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarALLRatos</servlet-name>
        <url-pattern>/ConsultarALLRatos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
</web-app>
